<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.richardtrevivian.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nanodegree_apps"
                    android:textSize="24dp"/>
                <Button
                    style="@style/AppButton"
                    android:text="@string/popular_movies"
                    android:onClick="onPopularMoviesButtonClicked"/>
                <Button
                    style="@style/AppButton"
                    android:text="@string/stock_hawk"
                    android:onClick="onStockHawkButtonClicked"/>
                <Button
                    style="@style/AppButton"
                    android:text="@string/build_it_bigger"
                    android:onClick="onBuildItBiggerButtonClicked"/>
                <Button
                    style="@style/AppButton"
                    android:text="@string/make_your_app_material"
                    android:onClick="onMakeYourAppMaterialButtonClicked"/>
                <Button
                    style="@style/AppButton"
                    android:text="@string/go_ubiquitous"
                    android:onClick="onGoUbiquitousButtonClicked"/>
                <Button
                    style="@style/AppButton"
                    android:text="@string/capstone"
                    android:onClick="onCapstoneButtonClicked"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
